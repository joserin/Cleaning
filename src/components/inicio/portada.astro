---
import Button from "../ButtonLink.astro";
---
<div class="relative h-[80vh] w-full max-w-[100vw] md:aspect-video md:h-full">
  <div
    class="absolute left-1/2 right-0 top-14 z-10 m-auto flex -translate-x-1/2 flex-col items-center w-full"
  >
    <section class="animate-fade-up flex justify-center items-center gap-8 
      flex-col aspect-[343/350] md:aspect-[343/160] 2xl:aspect-[343/260]">
      <h1 class="flex items-center gap-5 text-2xl md:text-4xl lg:gap-20 lg:text-6xl font-tomaso">
        <span class="text-white  bg-slate-400" >Cleaning Service</span>
      </h1>
      <div>
        <a class="w-fit lg:text-2xl font-medium text-white no-underline px-5 py-3
          border border-solid border-white rounded-full Uppercase bg-slate-400"
            href="tel:+1 (987) 4587 899">+1 (987) 4587 899</a
        >
        <Button class="animate-fade-up bg-slate-400" url="/contact">
          Book Now
        </Button>
      </div>
    </section>
  </div>

  <img
    class='transition-scale absolute bottom-0 left-0 top-0 h-full w-full
    bg-cover bg-center bg-no-repeat opacity-90 bg-blend-luminosity duration-1000 ease-in-out group-hover:scale-110'
    src="/Cleaning/portada.webp"
    />
</div>

<style>
  a {
    transition:
      text-shadow 0.5s ease-out,
      box-shadow 0.3s ease-out;
  }

  a:hover {
    box-shadow: 0 0 16px #fff8;
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.8),
      0 0 20px rgba(255, 255, 255, 0.8),
      0 0 22px rgba(255, 255, 255, 0.8),
      0 0 40px rgba(66, 220, 219, 0.8),
      0 0 60px rgba(66, 220, 219, 0.8),
      0 0 80px rgba(66, 220, 219, 0.5),
      0 0 100px rgba(66, 220, 219, 0.5),
      0 0 140px rgba(66, 220, 219, 0.5),
      0 0 200px rgba(66, 220, 219, 0.5);
  }
  @font-face {
    font-family: "Tomaso";
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src:url("/fonts/tomaso.woff2") format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Jura";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url("/fonts/jura.woff2") format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  h1 .letter-logo {
    width: 50px;
    height: 46px;
    background-position: center;
    background-size: contain;
    scale: 1.2;
  }

  @media (width >= 768px) {
    h1 .letter-logo {
      width: 100px;
      height: 66px;
    }
  }

  @media (width >= 992px) {
    h1 .letter-logo {
      height: 96px;
    }
  }
</style>